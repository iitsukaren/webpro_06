<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>軍艦</title>
  <link rel="stylesheet" href="./../public/style/shipstyle.css">
</head>
<body>
  <h1>世界の軍艦リスト</h1>
  <hr>
  <table>
    <thead>
        <tr>
            <th>ID</th>
            <th>型・級</th>
            <th>分類</th>
        </tr>
    </thead>
    <tbody>
        <% let number = 0 %>
            <% for( let row of data ) { %>
                <tr>
                    <td><%= row.id %></td>
                    <td><a href="/<%= number %>"><%= row.modelname %></a></td>
                    <td><%= row.shipclass %></td>
                </tr>
            <% number += 1 %>
        <% } %>
    </tbody>
  </table>
  <a  href="/create" class="linkplace">軍艦データの追加</a>
</body>
</html>